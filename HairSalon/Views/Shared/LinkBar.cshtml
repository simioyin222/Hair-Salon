<div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
  <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100" id="side-bar">
    <span class="fs-3 d-none d-sm-inline">Navigation Bar</span>
    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
      <li>
        <ul class="collapse show nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
          <li class="w-100">
            @Html.ActionLink("Home", "Index", "Home")
          </li>
          <li class="w-100">
            @Html.ActionLink("View all clients", "Index", "Clients")
          </li>
          <li class="w-100">
            @Html.ActionLink("See all stylists", "Index", "Stylists")
          </li>
          <!-- Insert Authentication Links Here -->
          @if (User.Identity.IsAuthenticated)
          {
              <li class="nav-item">
                  <form asp-controller="Accounts" asp-action="LogOff" method="post" class="form-inline">
                      <button type="submit" class="btn btn-link text-white text-decoration-none">Log Off</button>
                  </form>
              </li>
          }
          else
          {
              <li class="nav-item">
                  <a class="nav-link text-white text-decoration-none" asp-controller="Accounts" asp-action="Register">Register</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link text-white text-decoration-none" asp-controller="Accounts" asp-action="Login">Login</a>
              </li>
          }
        </ul>
      </li>
    </ul>
  </div>
</div>