@model IEnumerable<HairSalon.Models.Client>

@{
    ViewData["Title"] = "Registered Clients";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Add New Client</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Stylist</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var client in Model)
    {
        <tr>
            <td>@client.Name</td>
            <td>@client.Stylist.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@client.ClientId">Edit</a> |
                <a asp-action="Details" asp-route-id="@client.ClientId">Details</a> |
                <a asp-action="Delete" asp-route-id="@client.ClientId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>