@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="col py-2 col-xl-10 px-sm-2 px-0" id="main-display">
  <h1>Client Details</h1>
  <p>Details for the selected client.</p>
  <p>@Html.ActionLink("Edit Client", "Edit", new {id = Model.ClientId}) | @Html.ActionLink("Delete Client", "Delete", new { id = Model.ClientId})</p>
  <hr/>
  <h3><strong>@Html.DisplayNameFor(model => model.Name)</strong>: @Html.DisplayFor(model => model.Name)</h3>
  <h3><strong>@Html.DisplayNameFor(model => model.Stylist)</strong>: @Html.DisplayFor(model => model.Stylist.Name)</h3>
</div>