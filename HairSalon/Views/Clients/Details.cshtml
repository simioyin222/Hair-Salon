@model HairSalon.Models.Client

@{
    ViewData["Title"] = "Client Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>

        <dt>Stylist</dt>
        <dd>@Model.Stylist.Name</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ClientId">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.ClientId">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>